@model RegistrationVM
@{
    ViewData["Title"] = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/registration.css">
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
</head>

<body>
    <div class="container-fluid">

        <div class="row">
            <div id="carouselExampleIndicators" class="carousel slide col-lg-8" data-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" id="indi" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" id="indi" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    <button type="button" id="indi" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                </div>
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>

                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/images/Grow-Trees-On-the-path-to-environment-sustainability-login.png"
                             alt="First slide">
                        <div class="carousel-caption d-block d-none d-sm-block">
                            <h5>First</h5>
                            <p>
                                Lorem ipsum dolor sit amet consectetur adipisicing elit. Dignissimos possimus, dolor modi
                                autem vitae alias vero fugit a tempore eaque quia enim nihil facere? Voluptatum dolorem
                                fugit culpa nihil vero?
                            </p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/Grow-Trees-On-the-path-to-environment-sustainability-login.png"
                             alt="Second slide">
                        <div class="carousel-caption d-block d-none d-sm-block">
                            <h5>Second</h5>
                            <p>
                                Lorem ipsum dolor sit amet consectetur adipisicing elit. Nisi ratione culpa suscipit quo
                                est quod consequuntur temporibus velit sunt amet repellat, repudiandae explicabo
                                reiciendis facere ea architecto. Inventore, iure qui?
                            </p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/Grow-Trees-On-the-path-to-environment-sustainability-login.png"
                             alt="Third slide">
                        <div class="carousel-caption d-block d-none d-sm-block">
                            <h5>Third</h5>
                            <p>
                                Lorem ipsum dolor sit amet, consectetur adipisicing elit. Officiis quae sunt ut voluptate
                                ratione excepturi esse recusandae consequuntur corporis nisi blanditiis omnis qui
                                asperiores expedita, laborum autem saepe. Enim, corrupti?
                            </p>
                        </div>
                    </div>
                </div>
            </div>


            <div id="form" class="col-lg-4">
                <form class="my-auto" method="post">
                    <div class="form-group">
                        <label class="form-label">First Name</label>
                        <input asp-for="FirstName" class="form-control" id="InputName">
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="form-label mt-3">Last Name</label>
                        <input asp-for="LastName" class="form-control" id="InputLName">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="form-label mt-3">Phone Number</label>
                        <input asp-for="PhoneNumber" type="tel" class="form-control" id="InputNumber">
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="InputEmail1" class="form-label mt-3">Email Address</label>
                        <input asp-for="Email" type="email" class="form-control" id="InputEmail" aria-describedby="emailHelp">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="InputPassword1" class="form-label mt-3">Password</label>
                        <input asp-for="Password" type="password" class="form-control" id="InputPassword">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="InputPassword2" class="form-label mt-3">Confirm Password</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" id="InputCheckPassword">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button id="RegisterBtn" class="btn btn-primary col-12 py-0" type="submit">Register</button>

                    <div class="lostNewAcc">
                        <a class="text-secondary text-decoration-none" style="font-size: 18px" asp-area="Customer" asp-controller="Auth" asp-action="ForgotPassword">Lost your password?</a>
                        <p style="font-size: 15px" id="newPass">Already have an account? <a class="text-secondary text-decoration-none" style="font-size: 16px" asp-area="" asp-controller="Auth" asp-action="Login">Login Now</a></p>
                    </div>
                </form>

                <div class="PP text-center mx-auto">
                    <p> <a class="text-decoration-none text-dark" style="font-size: 16px" asp-controller="User" asp-action="PolicyPage">Privacy Policy</a></p>
                </div>

            </div>

        </div>

    </div>

</body>

</html>